<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.StoreDetailFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:showIn="@layout/activity_store_detail"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_item"
                app:cardElevation="3dp"
                tools:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_item"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_menu_store"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/padding_item"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_name"
                        android:textSize="@dimen/text_title"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/padding_item"
                        android:layout_marginBottom="@dimen/padding_item"/>

                    <TextView
                        android:id="@+id/textViewName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_name"
                        android:layout_marginLeft="@dimen/padding_item"
                        android:layout_marginBottom="@dimen/padding_item"
                        android:textSize="@dimen/text_title"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_item"
                android:layout_marginBottom="@dimen/padding_item"
                app:cardElevation="3dp"
                tools:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_item"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_menu_location"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/padding_item"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_address"
                        android:textSize="@dimen/text_title"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/padding_item"
                        android:layout_marginBottom="@dimen/padding_item"/>

                    <TextView
                        android:id="@+id/textViewAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_address"
                        android:layout_marginLeft="@dimen/padding_item"
                        android:layout_marginBottom="@dimen/padding_item"
                        android:textSize="@dimen/text_title"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_item"
                android:layout_marginBottom="@dimen/padding_item"
                app:cardElevation="3dp"
                tools:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_item"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_menu_location"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/padding_item"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_neighborhood"
                        android:textSize="@dimen/text_title"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/padding_item"
                        android:layout_marginBottom="@dimen/padding_item"/>

                    <TextView
                        android:id="@+id/textViewNeighborhood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_neighborhood"
                        android:layout_marginLeft="@dimen/padding_item"
                        android:layout_marginBottom="@dimen/padding_item"
                        android:textSize="@dimen/text_title"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_item"
                android:layout_marginBottom="@dimen/padding_item"
                app:cardElevation="3dp"
                tools:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_item"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_menu_location"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/padding_item"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_city"
                        android:textSize="@dimen/text_title"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/padding_item"
                        android:layout_marginBottom="@dimen/padding_item"/>

                    <TextView
                        android:id="@+id/textViewCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_city"
                        android:layout_marginLeft="@dimen/padding_item"
                        android:layout_marginBottom="@dimen/padding_item"
                        android:textSize="@dimen/text_title"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_item"
                android:layout_marginBottom="@dimen/padding_item"
                app:cardElevation="3dp"
                tools:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_item"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_menu_phone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/padding_item"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_phone"
                        android:textSize="@dimen/text_title"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/padding_item"
                        android:layout_marginBottom="@dimen/padding_item"/>

                    <TextView
                        android:id="@+id/textViewPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_phone"
                        android:layout_marginLeft="@dimen/padding_item"
                        android:layout_marginBottom="@dimen/padding_item"
                        android:textSize="@dimen/text_title"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewEmail"
                style="@style/CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_item"
                android:layout_marginBottom="@dimen/padding_item"
                app:cardElevation="3dp"
                tools:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_item"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_menu_email"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/padding_item"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_email"
                        android:textSize="@dimen/text_title"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/padding_item"
                        android:layout_marginBottom="@dimen/padding_item"/>

                    <TextView
                        android:id="@+id/textViewEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_email"
                        android:layout_marginLeft="@dimen/padding_item"
                        android:layout_marginBottom="@dimen/padding_item"
                        android:textSize="@dimen/text_title"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_item"
                android:layout_marginBottom="@dimen/padding_item"
                app:cardElevation="3dp"
                tools:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_item"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_menu_hour"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/padding_item"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/card_margin"
                    android:layout_marginEnd="@dimen/padding_item">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_office_hour"
                        android:textSize="@dimen/text_title"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/padding_item"
                        android:layout_marginBottom="@dimen/padding_item"/>

                    <TextView
                        android:id="@+id/textViewOfficeHour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_office_hour"
                        android:layout_marginLeft="@dimen/padding_item"
                        android:layout_marginBottom="@dimen/padding_item"
                        android:textSize="@dimen/text_title"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>